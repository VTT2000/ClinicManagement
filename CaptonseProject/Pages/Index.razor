@page "/"
@using Microsoft.AspNetCore.Components.Authorization
@using web_api_base.ViewModel
@inject AuthenticationStateProvider AuthenticationStateProvider
@inject HttpClient HttpClient

@inject IHttpClientFactory httpClientFactory
@inject IJSRuntime JSRuntime

@inject IGetDoctorService GetDoctorService


@layout MainLayout

<div class="container-fluid">
  <!-- Header Section -->
  <div class="row bg-light py-5">
    <div class="col-md-6 d-flex align-items-center">
      <div class="p-4">
        <h1 class="display-4">We help people to get appointment in online</h1>
        <p class="lead">Lorem ipsum dolor sit amet, consectetur adipiscing elit. Sed do eiusmod tempor incididunt ut
          labore et dolore magna aliqua.</p>
        <button class="btn btn-primary btn-lg">Get Started</button>
      </div>
    </div>
    <div class="col-md-6 d-flex justify-content-center align-items-center">
      <img src="images/home1.png" alt="Illustration" class="img-fluid d-inline-block"
        style="height: auto; width: 300px;" />
      <img src="images/home2.png" alt="Illustration" class="img-fluid d-inline-block"
        style="height: 300px;position: relative; left: -150px; object-fit: contain ;width: 300px;" />
    </div>
  </div>

  <!-- Who We Are Section -->
  <div class="row py-5 align-items-center">
    <!-- Hình ảnh bên trái -->
    <div class="col-md-6 text-center">
      <img src="images/home3.png" alt="Who We Are Illustration" class="img-fluid"
        style="max-width: 100%; height: auto;" />
    </div>

    <!-- Nội dung bên phải -->
    <div class="col-md-6">
      <h6 class="text-primary">Biography</h6>
      <h2 class="fw-bold">Who We Are</h2>
      <p>Lorem Media is a full-service social media agency. We offer businesses innovative solutions that deliver the
        right set of audiences to you in the most effective strategic methods. We strive to develop a community around
        your business, polishing your branding and improving your public relations.</p>
      <p>Social Media is now one of the most powerful marketing tools with the ability to communicate with a target
        audience in real time.</p>
      <p>It's 2025 time to sink or swim.</p>
      <p>We are your Social Media Marketing Agency.</p>
      <button class="btn btn-primary">See More</button>
    </div>
  </div>

  <!-- Our Services Section -->
  <div class="row py-5 bg-light">
    <div class="col-12 text-center mb-4">
      <h2>Our Services</h2>
      <p class="text-muted">Explore our specialized services tailored for your needs.</p>
    </div>
    <div class="col-12">
      <div class="d-flex justify-content-center gap-4 flex-wrap">
        @for (int i = 0; i < 3; i++) // Hiển thị 3 dịch vụ
        {
          <div class="service-card text-center">
            <img src="images/home4.png" alt="Service Image" class="img-fluid rounded mb-3" />
            <h5 class="fw-bold">NEUROSCIENCES</h5>
          </div>
        }
      </div>
    </div>
  </div>

  <!-- Our Doctors Section -->
  <div class="row py-5">
    <div class="col-12 text-center mb-4">
      <h2>Our Doctors</h2>
    </div>
    <div class="col-12">
      @if (isLoadingDoctors)
      {
        <div class="text-center">
          <div class="spinner-border text-primary" role="status">
            <span class="visually-hidden">Loading doctors...</span>
          </div>
          <p class="mt-2">Đang tải danh sách bác sĩ...</p>
        </div>
      }
      else if (doctors == null || doctors.Count == 0)
      {
        <div class="text-center">
          <p class="text-muted">Không có bác sĩ nào để hiển thị.</p>
        </div>
      }
      else
      {
        <div class="d-flex justify-content-center gap-4 flex-wrap">
          @foreach (var doctor in doctors)
          {
            <div class="doctor-card text-center">
              <img src="@doctor.ImageUrl" 
                   alt="@doctor.FullName" 
                   class="img-fluid rounded-circle mb-3"
                   onerror="this.src='images/home5.png';" />
              <h6 class="fw-bold">@doctor.FullName</h6>
              <p class="text-muted">@(doctor.Specialization ?? "MEDICAL DOCTOR")</p>
            </div>
          }
        </div>
        
        @if (totalDoctors > doctors.Count)
        {
          <div class="text-center mt-4">
            <button class="btn btn-outline-primary" @onclick="LoadDoctors">
              Xem thêm bác sĩ (@(totalDoctors - doctors.Count) còn lại)
            </button>
          </div>
        }
      }
    </div>
  </div>

  <!-- Contact Section -->
  <div class="row py-5">
    <div class="col-12 text-center">
      <h2>Send us a message</h2>
    </div>
    <div class="col-md-8 mx-auto">
      <form class="contact-form">
        <div class="row">
          <div class="col-md-6 mb-3">
            <input type="text" class="form-control" placeholder="First Name" />
          </div>
          <div class="col-md-6 mb-3">
            <input type="text" class="form-control" placeholder="Last Name" />
          </div>
          <div class="col-md-6 mb-3">
            <input type="text" class="form-control" placeholder="Mobile Number" />
          </div>
          <div class="col-md-6 mb-3">
            <input type="email" class="form-control" placeholder="Email" />
          </div>
          <div class="col-12 mb-3">
            <textarea class="form-control" rows="4" placeholder="Message"></textarea>
          </div>
          <div class="col-12 text-center">
            <button type="submit" class="btn btn-primary w-50">Send</button>
          </div>
        </div>
      </form>
    </div>
  </div>
</div>



@code {
  private List<DoctorDTO> doctors = new List<DoctorDTO>();
  private bool isLoadingDoctors = true;
  private int currentPage = 1;
  private int pageSize = 12; // Hiển thị 12 bác sĩ như yêu cầu ban đầu
  private int totalDoctors = 0;

  protected override async Task OnInitializedAsync()
  {
    await LoadDoctors();

  }

  private async Task LoadDoctors()
  {
    try
    {
      isLoadingDoctors = true;

      var result = await GetDoctorService.LoadDoctorsAsync(); 
      
      if (result.StatusCode == 200) // Giả sử 200 là mã trạng thái thành công
      {
        doctors = result.Data;
        totalDoctors = result.Data.Count; 
      }
      else
      {
      
        doctors = new List<DoctorDTO>();
      }
      

    }
    catch (Exception ex)
    {
      await JSRuntime.InvokeVoidAsync("console.error", $"Lỗi khi tải bác sĩ: {ex.Message}");
      doctors = new List<DoctorDTO>();
    }
    finally
    {
      isLoadingDoctors = false;
    }
  }


}


